---
const {
  title = "Free Online Text Tools – Word Counter, Text Case Converter & More",
  description = "Instantly count words and characters in your text with our free online tool.",
} = Astro.props;
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      property="og:title"
      content="Free Online Text Tools – Word Counter, Text Case Converter & More"
    />
    <meta
      property="og:description"
      content="Instantly count words and characters in your text. Free, private, mobile-friendly."
    />
    <meta property="og:image" content="/og-image-word-counter.png" />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content="/og-image-word-counter.png" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="msvalidate.01" content="53B08D052BA24CF8C1069BCE388AF568" />
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "FAQPage",
        "mainEntity": [
          {
            "@type": "Question",
            "name": "Is my text saved?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "No, your text is never uploaded or stored. Everything runs in your browser for maximum privacy."
            }
          },
          {
            "@type": "Question",
            "name": "Does this work on mobile?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "Yes, our word counter is fully mobile and desktop responsive."
            }
          },
          {
            "@type": "Question",
            "name": "What languages are supported?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "It works with any language that uses spaces to separate words."
            }
          }
        ]
      }
    </script>
    <script is:inline type="text/javascript">
      atOptions = {
        key: "76edaf50bf01d3f0d03d7058d78ffef5",
        format: "iframe",
        height: 60,
        width: 468,
        params: {},
      };
    </script>
    <script
      is:inline
      type="text/javascript"
      src="//www.highperformanceformat.com/76edaf50bf01d3f0d03d7058d78ffef5/invoke.js"
    ></script>

    <!-- Google tag (gtag.js) -->
    <script
      async
      is:inline
      src="https://www.googletagmanager.com/gtag/js?id=G-T2NYWMKKFC"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-T2NYWMKKFC");
    </script>
  </head>
  <body>
    <div
      class="min-h-screen flex flex-col bg-gray-50 text-gray-900 transition-colors"
    >
      <slot name="header" />
      <main class="flex-1 w-full max-w-5xl mx-auto px-8 py-12 container">
        <slot />
      </main>
      <slot name="footer" />
    </div>
  </body>
</html>
