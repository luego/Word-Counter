---
// src/components/ExploreMoreTools.astro
type Tool = { href: string; label: string };

const {
    tools = [
        { href: "/", label: "Word Counter" },
        { href: "/character-counter", label: "Character Counter" },
        { href: "/remove-duplicate-lines", label: "Remove Duplicate Lines" },
        { href: "/word-frequency-analyzer", label: "Word Frequency Analyzer" }
    ],
}: { tools?: Tool[] } = Astro.props;
---

<section class="mb-10 text-center">
    {
        tools.map((tool: Tool) => (
            <a
                href={tool.href}
                class="text-blue-700 font-bold underline underline-offset-4 hover:text-blue-900 transition text-lg px-2 py-1"
            >
                {tool.label}
            </a>
        ))
    }
    <div class="flex justify-center mt-6">
      <div>
        <script is:inline type="text/javascript">
          atOptions = {
            key: "d0fc2a2d7fb379a804a86df795b82be1",
            format: "iframe",
            height: 250,
            width: 250,
            params: {},
          };
        </script>
        <script
          is:inline
          type="text/javascript"
          src="//www.highperformanceformat.com/d0fc2a2d7fb379a804a86df795b82be1/invoke.js"
        ></script>
      </div>
    </div>
</section>
